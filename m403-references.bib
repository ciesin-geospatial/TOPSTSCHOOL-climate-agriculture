@article{Christian2021,
  title = {Global Distribution, Trends, and Drivers of Flash Drought Occurrence},
  author = {Christian, Jordan I. and Basara, Jeffrey B. and Hunt, Eric D. and Otkin, Jason A. and Furtado, Jason C. and Mishra, Vimal and Xiao, Xiangming and Randall, Robb M.},

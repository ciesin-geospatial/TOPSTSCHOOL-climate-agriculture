@inproceedings{White2022,
  title = {{{NASA}}'s {{Integrated Multi-Satellite Retrievals}} ({{IMERG}}) and {{NASA SPoRT Land Information System Products}} for {{Drought Analysis}}},
  author = {White, Kristopher D. and LeRoy, Anita and Fuell, Kevin K. and Hain, Christopher and Case, Jonathan L.},
  date = {2022-01-01},
  volume = {102},
  pages = {446},
  url = {https://ui.adsabs.harvard.edu/abs/2022AMS...10295999W},
  urldate = {2025-06-11},
  abstract = {The NASA SPoRT Program has been producing a near real-time instance of NASA's Land Information System (hereafter known as SPoRT-LIS) since 2010, which contains output of soil moisture and temperature at layered depths. The SPoRT-LIS was initially developed to provide near real-time land surface initialization variables for local numerical weather prediction models, such as the Weather Research and Forecasting (WRF) model. The earliest documented uses of the SPoRT-LIS as a tool for local drought analysis came from the National Weather Service Office in Huntsville, AL in 2011, in which recommendations were made to adjust the U.S. Drought Monitor drought categories on sub-county scales. Through engagement with SPoRT collaborative partners and via communication through conferences, webinars and email, the use of the SPoRT-LIS as a component of drought analysis and feedback to the U.S. Drought Monitor has gradually expanded in recent years. This effort was aided by feedback from end users who expressed needs for specific soil moisture variables, which led to increased applicability for analysis by others in the drought community. Efforts associated with the SPoRT-LIS have been confined mainly to the CONUS so far, however drought analysis needs for the experimental phase of the U.S. Affiliated Pacific Islands (USAPI) Drought Monitor, led to the use of other data sets provided by NASA SPoRT. Through a collaborative partnership, the NESDIS Quantitative Precipitation Estimates (QPE) product suite is now available online and via the local data manager to various NWS Offices. The SPoRT program began tailoring this product to meet the needs of USAPI Drought Monitor authors in 2016. More recently, the SPoRT program introduced NASA's Integrated Multi-Satellite Retrievals for GPM (IMERG) to aid with the drought analysis process across the USAPI. These QPE will enable much greater situational awareness in a region substantially lacking in datasets that help inform drought decision-making. This presentation will highlight the SPoRT-LIS and IMERG data sets for drought analysis and the collaborative process that has led to changes in product configuration and output to meet user needs.},
  eventtitle = {American {{Meteorological Society Meeting Abstracts}}},
  annotation = {ADS Bibcode: 2022AMS...10295999W}
}
